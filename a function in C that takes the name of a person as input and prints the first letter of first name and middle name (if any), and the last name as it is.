#include <stdio.h>
#include <string.h>
void printName(char name[])
{
    int i;
    printf("%c. ", name[0]);
    for(i = 1; name[i] != '\0'; i++)
    {
        if(name[i] == ' ' && name[i+1] != '\0')
            printf("%c. ", name[i+1]);
    }
    // print last name
    for(i = strlen(name)-1; i >= 0 && name[i] != ' '; i--);
    printf("%s", &name[i+1]);
}
int main()
{
  char name[50];
  gets(name);
  printName(name);
  return 0;
    
}
