#include <stdio.h>
#include <stdlib.h>
int main()
{
int *a;
int n1,n2,i;
printf("Enter n1: ");
scanf("%d",&n1);
a=(int*)malloc(n1*sizeof(int));
printf("Enter %d elements:\n",n1);
for(i=0;i<n1;i++)
scanf("%d",&a[i]);
printf("Enter n2: ");
scanf("%d",&n2);
a=(int*)realloc(a,(n1+n2)*sizeof(int));
printf("Enter %d more elements:\n",n2);
for(i=n1;i<n1+n2;i++)
scanf("%d",&a[i]);
printf("Array elements:\n");
for(i=0;i<n1+n2;i++)
printf("%d ",a[i]);
free(a);
return 0;
}

